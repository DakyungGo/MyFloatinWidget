<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="254dp"
    android:layout_height="150dp"
    android:background="#b2c29c">

<!--    <ImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="110dp"-->
<!--        android:src="@drawable/popup"/>-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="@drawable/popup">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="어플을 완전히 종료하시겠습니까?"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_marginBottom="8dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_popup_yes"
            android:layout_width="127dp"
            android:layout_height="40dp"
            android:background="#BBC5CA"
            android:textColor="#ffffff"
            android:text="YES"
            android:onClick="mYes"
            />

        <Button
            android:id="@+id/btn_popup_no"
            android:layout_width="127dp"
            android:layout_height="40dp"
            android:background="#F50155"
            android:textColor="#ffffff"
            android:text="NO (위젯은 살리기)"
            android:onClick="mNo"
            />

    </LinearLayout>
    </LinearLayout>

</LinearLayout>